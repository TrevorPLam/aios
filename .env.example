# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/aios_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=aios_db
DB_USER=user
DB_PASSWORD=password

# JWT Authentication
JWT_SECRET=your-secret-key-here-change-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-refresh-token-secret-here
REFRESH_TOKEN_EXPIRES_IN=30d

# AI Service Configuration (Choose one)
# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=1000

# Anthropic Claude
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Google AI
GOOGLE_AI_API_KEY=your-google-ai-api-key-here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:8081,http://localhost:19000,http://localhost:19006

# Replit-specific (remove if not deploying to Replit)
REPLIT_DEV_DOMAIN=your-repl-name.your-username.repl.co
REPLIT_DOMAINS=your-repl-name.your-username.repl.co
EXPO_PUBLIC_DOMAIN=your-repl-name.your-username.repl.co:5000

# Expo Configuration
EXPO_PACKAGER_PROXY_URL=https://your-domain.com
REACT_NATIVE_PACKAGER_HOSTNAME=your-domain.com

# Feature Flags
ENABLE_AI_RECOMMENDATIONS=true
ENABLE_WEBSOCKET=false
ENABLE_EMAIL_MODULE=true

# Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Error Reporting (Optional)
SENTRY_DSN=your-sentry-dsn-here
SENTRY_ENVIRONMENT=development

# Analytics (Optional)
ANALYTICS_ENABLED=false
ANALYTICS_KEY=your-analytics-key-here

# Email Service (Optional - for future email integration)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password

# File Upload (Optional - for future file attachments)
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# Session Configuration
SESSION_SECRET=your-session-secret-here
SESSION_TIMEOUT=3600000

# Redis (Optional - for caching and session store)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# AI Recommendation Settings
AI_REFRESH_INTERVAL_HOURS=6
AI_MAX_RECOMMENDATIONS_PER_REFRESH=8
AI_MIN_CONFIDENCE_THRESHOLD=0.3

# Development
SKIP_AUTH=false
USE_MOCK_AI=false
SEED_DATABASE=false
