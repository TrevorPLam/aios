{
  "repository": "aios",
  "type": "monorepo",
  "structure": {
    "apps": "Applications (web, mobile, api)",
    "packages": "Shared code (design-system, features, platform, contracts)"
  },
  "apps": {
    "web": "apps/web - Web application",
    "mobile": "apps/mobile - React Native app",
    "api": "apps/api - API server with Express/Fastify"
  },
  "packages": {
    "design-system": "UI components, theme, constants",
    "features": "Feature modules with data/domain/ui structure",
    "platform": "Analytics, storage, logging utilities",
    "contracts": "Shared types, schemas, constants"
  },
  "featureStructure": "packages/features/[name]/{data/, domain/, ui/, index.ts}"
}
