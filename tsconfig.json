{
  "extends": "expo/tsconfig.base.json",
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": ["./apps/mobile/*"],
      "@contracts/*": ["./packages/contracts/*"],
      "@features/*": ["./packages/features/*"],
      "@platform/*": ["./packages/platform/*"],
      "@design-system/*": ["./packages/design-system/*"],
      "@apps/*": ["./apps/*"]
    },
    "types": ["node", "jest"]
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "build", "dist"]
}
