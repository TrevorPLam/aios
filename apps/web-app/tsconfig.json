{
  "extends": "@aios/typescript-config/react.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "jsx": "preserve",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowJs": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@aios/ui": ["../../packages/ui"],
      "@aios/features": ["../../packages/features"],
      "@aios/platform": ["../../packages/platform"],
      "@aios/contracts": ["../../packages/contracts"],
      "@aios/utils": ["../../packages/utils"],
      "@aios/api-sdk": ["../../packages/api-sdk"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules", "dist", ".next"]
}
