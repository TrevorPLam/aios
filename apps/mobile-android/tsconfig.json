{
  "extends": "@aios/typescript-config/react.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "jsx": "react-native",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@aios/mobile-shared": ["../mobile-shared"],
      "@aios/ui": ["../../packages/ui"],
      "@aios/features": ["../../packages/features"],
      "@aios/platform": ["../../packages/platform"],
      "@aios/contracts": ["../../packages/contracts"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.js"],
  "exclude": ["node_modules", "dist"]
}
