    "jsonwebtoken": "^9.0.2",
    "zod": "^3.23.8",
    "zod-validation-error": "^3.2.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^25.1.0"
  }
}
