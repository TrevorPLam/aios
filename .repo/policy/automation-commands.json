{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "version": "1.0.0",
  "description": "Non-AI powered automation commands available for agentic orchestration",
  "last_updated": "2026-01-24",
  "non_ai_commands": {
    "code_analysis": [
      {
        "id": "refactor",
        "command": "npm run ultra:refactor",
        "description": "Analyze code complexity and suggest refactoring opportunities (works without AI)",
        "usage": "npm run ultra:refactor -- --file=path/to/file.ts"
      },
      {
        "id": "bug-predict",
        "command": "npm run ultra:bug-predict",
        "description": "Detect potential bugs using pattern matching (works without AI)",
        "usage": "npm run ultra:bug-predict -- --prevent-commit"
      },
      {
        "id": "coverage",
        "command": "npm run ultra:coverage",
        "description": "Analyze test coverage and identify gaps",
        "usage": "npm run ultra:coverage"
      },
      {
        "id": "performance-profile",
        "command": "npm run ultra:performance-profile",
        "description": "Profile code performance and identify bottlenecks",
        "usage": "npm run ultra:performance-profile"
      }
    ],
    "code_quality": [
      {
        "id": "governance",
        "command": "npm run check:governance",
        "description": "Verify governance compliance",
        "usage": "npm run check:governance"
      },
      {
        "id": "security",
        "command": "npm run check:security",
        "description": "Check for security patterns and vulnerabilities",
        "usage": "npm run check:security"
      },
      {
        "id": "boundaries",
        "command": "npm run check:boundaries",
        "description": "Verify architectural boundaries",
        "usage": "npm run check:boundaries"
      },
      {
        "id": "compliance",
        "command": "npm run check:compliance",
        "description": "Check framework compliance",
        "usage": "npm run check:compliance"
      }
    ],
    "task_management": [
      {
        "id": "task-completion",
        "command": "npm run intelligent:task-completion",
        "description": "Auto-detect task completion from PRs",
        "usage": "npm run intelligent:task-completion"
      },
      {
        "id": "task-dependencies",
        "command": "npm run intelligent:task-dependencies",
        "description": "Auto-resolve task dependencies and promote tasks",
        "usage": "npm run intelligent:task-dependencies"
      },
      {
        "id": "task-packet",
        "command": "npm run intelligent:task-packet",
        "description": "Auto-generate task packets",
        "usage": "npm run intelligent:task-packet -- --task-id=TASK-XXX"
      }
    ],
    "documentation": [
      {
        "id": "update-docs",
        "command": "npm run intelligent:update-docs",
        "description": "Auto-update documentation from code changes",
        "usage": "npm run intelligent:update-docs"
      },
      {
        "id": "adr",
        "command": "npm run intelligent:adr",
        "description": "Auto-generate ADRs when triggers detected",
        "usage": "npm run intelligent:adr"
      }
    ],
    "testing": [
      {
        "id": "test-cases",
        "command": "npm run intelligent:test-cases",
        "description": "Generate test case templates from code",
        "usage": "npm run intelligent:test-cases -- --file=path/to/file.ts"
      },
      {
        "id": "test-coverage",
        "command": "npm run test:coverage",
        "description": "Run tests with coverage report",
        "usage": "npm run test:coverage"
      }
    ],
    "orchestration": [
      {
        "id": "orchestrate",
        "command": "npm run ultra:orchestrate",
        "description": "Run automations by tier or all",
        "usage": "npm run ultra:orchestrate -- --tier=1 | --all"
      }
    ]
  },
  "ai_enhanced_commands": {
    "note": "These commands work without AI but are enhanced when AI is configured",
    "commands": [
      "ultra:refactor",
      "ultra:bug-predict",
      "ultra:migration",
      "ultra:code-review",
      "ultra:architecture"
    ],
    "ai_configuration": {
      "required_env_vars": [
        "AI_PROVIDER (openai or anthropic)",
        "OPENAI_API_KEY or ANTHROPIC_API_KEY",
        "AI_MODEL (gpt-4, claude-3, etc.)"
      ],
      "note": "Commands function without AI but provide enhanced capabilities when configured"
    }
  }
}
