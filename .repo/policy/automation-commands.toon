$schema: "http://json-schema.org/draft-07/schema#"
version: 1.0.0
description: Non-AI powered automation commands available for agentic orchestration
last_updated: 2026-01-24
non_ai_commands:
  code_analysis[4]{id,command,description,usage}:
    refactor,"npm run ultra:refactor",Analyze code complexity and suggest refactoring opportunities (works without AI),"npm run ultra:refactor -- --file=path/to/file.ts"
    bug-predict,"npm run ultra:bug-predict",Detect potential bugs using pattern matching (works without AI),"npm run ultra:bug-predict -- --prevent-commit"
    coverage,"npm run ultra:coverage",Analyze test coverage and identify gaps,"npm run ultra:coverage"
    performance-profile,"npm run ultra:performance-profile",Profile code performance and identify bottlenecks,"npm run ultra:performance-profile"
  code_quality[4]{id,command,description,usage}:
    governance,"npm run check:governance",Verify governance compliance,"npm run check:governance"
    security,"npm run check:security",Check for security patterns and vulnerabilities,"npm run check:security"
    boundaries,"npm run check:boundaries",Verify architectural boundaries,"npm run check:boundaries"
    compliance,"npm run check:compliance",Check framework compliance,"npm run check:compliance"
  task_management[3]{id,command,description,usage}:
    task-completion,"npm run intelligent:task-completion",Auto-detect task completion from PRs,"npm run intelligent:task-completion"
    task-dependencies,"npm run intelligent:task-dependencies",Auto-resolve task dependencies and promote tasks,"npm run intelligent:task-dependencies"
    task-packet,"npm run intelligent:task-packet",Auto-generate task packets,"npm run intelligent:task-packet -- --task-id=TASK-XXX"
  documentation[2]{id,command,description,usage}:
    update-docs,"npm run intelligent:update-docs",Auto-update documentation from code changes,"npm run intelligent:update-docs"
    adr,"npm run intelligent:adr",Auto-generate ADRs when triggers detected,"npm run intelligent:adr"
  testing[2]{id,command,description,usage}:
    test-cases,"npm run intelligent:test-cases",Generate test case templates from code,"npm run intelligent:test-cases -- --file=path/to/file.ts"
    test-coverage,"npm run test:coverage",Run tests with coverage report,"npm run test:coverage"
  orchestration[1]{id,command,description,usage}:
    orchestrate,"npm run ultra:orchestrate",Run automations by tier or all,"npm run ultra:orchestrate -- --tier=1 | --all"
ai_enhanced_commands:
  note: These commands work without AI but are enhanced when AI is configured
  commands[5]: "ultra:refactor", "ultra:bug-predict", "ultra:migration", "ultra:code-review", "ultra:architecture"
  ai_configuration:
    required_env_vars[3]: AI_PROVIDER (openai or anthropic), OPENAI_API_KEY or ANTHROPIC_API_KEY, "AI_MODEL (gpt-4, claude-3, etc.)"
    note: Commands function without AI but provide enhanced capabilities when configured
